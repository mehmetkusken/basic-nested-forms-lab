<%= render 'form', recipe: @recipe %>
<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :ingredients %><br>

    <%= f.fields_for :ingredients do |g| %>
        <%= g.label :name %>
        <%= g.text_field :name %>
        <%= g.label :quantity %>
        <%= g.text_field :quantity %><br>

    <% end %>
    <%= f.submit %>
<% end %>